@page "/eventregistration"
@using EventEaseApp.Models
@using EventEaseApp.Services



<h3 class="text-2xl font-bold mb-4">Register a New Event</h3>

<EditForm Model="newEvent" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-2">
        <label>Name:</label><br />
        <InputText @bind-Value="newEvent.Name" class="border p-1 w-full" />
    </div>

    <div class="mb-2">
        <label>Date:</label><br />
        <InputDate @bind-Value="newEvent.Date" class="border p-1 w-full" />
    </div>

    <div class="mb-2">
        <label>Location:</label><br />
        <InputText @bind-Value="newEvent.Location" class="border p-1 w-full" />
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Submit</button>
</EditForm>

@if (submitted)
{
    <p class="text-green-600 mt-4">Event <strong>@newEvent.Name</strong> registered successfully!</p>
}



@code {
    private EventModel newEvent = new()
    {
        Date = DateTime.Today
    };

    private bool submitted = false;

    private void HandleValidSubmit()
    {
        submitted = true;

        // For now, just print to console or display success message.
        // Later: Save to database or pass to a shared service.
        Console.WriteLine($"Event registered: {newEvent.Name}, {newEvent.Date}, {newEvent.Location}");
    }
}

